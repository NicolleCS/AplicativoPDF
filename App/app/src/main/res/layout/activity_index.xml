<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="ABCD Recibos e Orçamentos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/et_cliente"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Cliente"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo"
        />

    <EditText
        android:id="@+id/et_cpf"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="CPF/CNPJ"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_cliente"
        />

    <EditText
        android:id="@+id/et_endereco"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Endereço"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_cpf"
        />

    <Button
        android:id="@+id/bt_adicionar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_endereco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Adicionar serviço"
        android:onClick="Adicionar"
        />

    <Button
        android:id="@+id/bt_finalizar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_adicionar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Finalizar"
        android:onClick="Finalizar"
        />

    <TextView
        android:id="@+id/tv_tituloServicos"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Serviços adicionados"
        app:layout_constraintTop_toBottomOf="@+id/bt_finalizar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
            android:id="@+id/ll_tipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_tituloServicos"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
    >

        <TextView
                android:id="@+id/tv_quantidade"
                android:layout_marginTop="30dp"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="Qtde."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />
        <TextView
                android:id="@+id/tv_descricao"
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="Descrição"
                app:layout_constraintTop_toBottomOf="@+id/bt_finalizar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />
        <TextView
                android:id="@+id/tv_valor"
                android:layout_marginTop="30dp"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:text="Valor"
                app:layout_constraintTop_toBottomOf="@+id/bt_finalizar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_tipos"
    >
        <LinearLayout
            android:id="@+id/ll_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
        >

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>