<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionaServico">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="ABCD Recibos e Orçamentos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/et_quantidade"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Quantidade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo"
        />

    <EditText
        android:id="@+id/et_descricao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Descrição"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_quantidade"
        />

    <EditText
        android:id="@+id/et_valor"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Valor unitário"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descricao"
        />

    <Button
        android:id="@+id/bt_adicionar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_valor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Adicionar serviço"
        android:onClick="AdicionarServico"
        />

    <Button
            android:id="@+id/bt_finalizar"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_adicionar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Finalizar"
            android:onClick="Finalizar"
    />

</androidx.constraintlayout.widget.ConstraintLayout>